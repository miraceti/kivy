MDBoxLayout:
    orientation:  'vertical'

    MDToolbar:
        title: "Our Top toolbar"
        left_action_items: [['menu', lambda x: None]]
        right_action_items: [['dots-vertical', lambda x: None]]

    MDLabel:
        id: my_label
        text: "Some Stuff"
        halign: "center"

    MDBottomAppBar:
        MDToolbar:
            icon: 'git'
            left_action_items: [['menu', lambda x: app.presser()]]
            title: 'Bottom Menu'
            type: 'bottom'
            # mode: "free-end"
            # mode: 'end'
            # mode: 'center'
            mode: 'free-center'
            # click the button
            on_action_button: app.presser()