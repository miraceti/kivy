<Home>:
    
    Screen:
        name: "eqn"
        MDTextFieldRect:
            id: fn
            size_hint: None, None
            width: 600
            height: "30dp"
            background_color: app.theme_cls.bg_normal
            pos_hint: {"center_x":.5, "center_y":.8}
            hint_text: "funtion of y: "

        MDTextFieldRect:
            id: first_value
            size_hint: None, None
            width: 300
            height: "30dp"
            background_color: app.theme_cls.bg_normal
            pos_hint: {"center_x":.5, "center_y":.7}
            hint_text: "initial value of x "

        MDTextFieldRect:
            id: final_value
            size_hint: None, None
            width: 300
            height: "30dp"
            background_color: app.theme_cls.bg_normal
            pos_hint: {"center_x":.5, "center_y":.6}
            hint_text: "Final value of x"
    
        MDTextFieldRect:
            id: nmbrs_parts
            size_hint: None, None
            width: 300
            height: "30dp"
            background_color: app.theme_cls.bg_normal
            pos_hint: {"center_x":.5, "center_y":.5}
            hint_text: "Number of Domain for y"
    
        MDRaisedButton:
            text: "Generate the Graph"
            pos_hint: {"center_x":.5, "center_y":.35}
            on_release: root.gnrt_graph();root.current = "graph"


    Screen:
        name: "graph"
        
        BoxLayout:
            id:bx
            orientation: 'vertical'
            pos_hint: {"top":1}
            size_hint_y:.9

            


        MDRaisedButton:
            text: "Back to Home Screen"
            pos_hint: {"center_y":.1, "center_x":.5}
            on_release: root.current = "eqn"
            