<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            size_hint: (1.0, 0.05)
            text: "CALCULATRICE"
            halign: "center"
            font_size: 30
            color: 1,0,1,1
            canvas.before:
                Color:
                    rgba:  0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 40
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4
            rows: 6

            #ROWS
            #1
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "%"
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "CE"
        
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 80
                text: "C"
                on_press: root.clear()
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "/"
        
