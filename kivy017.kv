<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            size_hint: (1.0, 0.05)
            text: "CALCULATRICE"
            halign: "center"
            font_size: 30
            color: 1,0,1,1
            canvas.before:
                Color:
                    rgba:  0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4
            rows: 6

            #ROWS
            #1
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "%"
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "C"
                on_press: root.clear()

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 80
                text: u"\u00AB"
                on_press: root.remove()
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "/"
        
            #2
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "x"
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "x"
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "x"
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "/"
                on_press: root.math_sign("/")
            
            #3
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "7"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(7)
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "8"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(8)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "9"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(9)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "x"
                on_press: root.math_sign("*")
        
            #4
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "4"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(4)
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "5"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(5)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "6"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(6)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "-"
                on_press: root.math_sign("-")
        
            #5
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "1"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(1)
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "2"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(2)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "3"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(3)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "+"
                on_press: root.math_sign("+")

            #6
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.pos_neg()
            
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "0"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(0)
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "."
                background_color: (157/255,157/255,157/255,1)
                on_press: root.dot()
        
            Button:
                size_hint: (.2, .2)
                font_size: 80
                text: "="
                on_press: root.equals()
        




            