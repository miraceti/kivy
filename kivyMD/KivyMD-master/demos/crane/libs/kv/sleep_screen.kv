		md_bg_color: gch("#5D1049")
		orientation: "vertical"

		MDBoxLayout:
			adaptive_height: True
			orientation: "vertical"
			md_bg_color: gch("#5D1049")
			spacing: dp(10)
			padding: dp(25)

