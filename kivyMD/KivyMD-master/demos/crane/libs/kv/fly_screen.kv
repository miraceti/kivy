#: import environ os.environ

<CraneFlyScreen>

	MDBoxLayout:
		md_bg_color: gch("#5D1049")
		orientation: "vertical"

		MDBoxLayout:
			adaptive_height: True
			orientation: "vertical"
			md_bg_color: gch("#5D1049")
			spacing: dp(10)
			padding: dp(25)

			CraneTextField:
				hint_text: "Travellers"
				icon_left: "account"
			CraneTextField:
				hint_text: "Choose Origin"
				icon_left: "map-marker"
			CraneTextField:
				hint_text: "Choose Destination"
				icon_left: "airplane"
			CraneTextField:
				hint_text: "Select dates"
				icon_left: "calendar-range"

		MDBoxLayout:
			canvas.before:
				Color:
					rgba: root.theme_cls.bg_normal
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: [20, 20, 0, 0]

			ScrollView:

				MDList:

					MDBoxLayout:
						adaptive_height: True
						padding: dp(15)

						MDLabel:
							text: "Explore flights by destinations"
							font_style: "Subtitle2"
							theme_text_color: "Hint"
							adaptive_height: True

					CraneListItem:
						text: "Bug Sur, United States"
