<KitchenSinkLabelForChips@MDLabel>
    theme_text_color: "Primary"


<KitchenSinkChips>
    name: "chips"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        ScrollView:

            MDGridLayout:
                padding: "10dp"
                spacing: "10dp"
                cols: 1
                adaptive_height: True

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chips with color:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        text: "Coffee"
                        color: .4470588235118, .1960787254902, 0, 1
                        icon: "coffee"
                        on_release: root.callback_for_menu_items(self)

                    MDChip:
                        text: "Duck"
                        color: .9215686274509803, 0, 0, 1
                        icon: "duck"
                        on_release: root.callback_for_menu_items(self)

                    MDChip:
                        text: "Earth"
                        color: .21176470535294, .098039627451, 1, 1
                        icon: "earth"
                        on_release: root.callback_for_menu_items(self)

                    MDChip:
                        text: "Face"
                        color: .2039215698, .4823117606, .435295883, 1
                        icon: "face"
                        on_release: root.callback_for_menu_items(self)

                    MDChip:
                        text: "Facebook"
                        color: .56078431302, .482352906, .435294883, 1
                        icon: "facebook"
                        on_release: root.callback_for_menu_items(self)

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chip without icon:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        text: "Without icon"
                        icon: ""
                        on_release: root.callback_for_menu_items(self)

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chips with check:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        text: "Check"
                        icon: ""
                        check: True
                        on_release: root.callback_for_menu_items(self)

                    MDChip:
                        text: "Check with icon"
                        icon: "city"
                        check: True
                        on_release: root.callback_for_menu_items(self)

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Choose chip:"

                MDSeparator:

                MDChooseChip:

                    MDChip:
                        text: "Earth"
                        icon: "earth"
                        on_release: root.callback_for_menu_items(self)
                        selected_chip_color: (.21176470535294, .098039627451, 1, 1)

                    MDChip:
                        text: "Face"
                        icon: "face"
                        on_release: root.callback_for_menu_items(self)
                        selected_chip_color: (.21176470535294, .098039627451, 1, 1)

                    MDChip:
                        text: "Facebook"
                        icon: "facebook"
                        on_release: root.callback_for_menu_items(self)
                        selected_chip_color: (.21176470535294, .098039627451, 1, 1)
