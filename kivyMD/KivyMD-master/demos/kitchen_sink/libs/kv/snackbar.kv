#:import Window kivy.core.window.Window


<KitchenSinkSnackBar>
    name: "snackbar"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"

        Widget:

        MDRaisedButton:
            text: "Create simple snackbar"
            pos_hint: {"center_x": .5}
            on_release: root.show_example_snackbar("simple")

        MDRaisedButton:
            text: "Create snackbar with button"
            pos_hint: {"center_x": .5}
            on_release: root.show_example_snackbar("button")

        MDRaisedButton:
            text: "Create snackbar from the left"
            pos_hint: {"center_x": .5}
            on_release: root.show_example_snackbar("left")

        MDRaisedButton:
            text: "Create snackbar using snackbar_x, snackbar_y"
            pos_hint: {"center_x": .5}
            on_release: root.show_example_snackbar("xy")

        MDRaisedButton:
            text: "Create snackbar from the top"
            pos_hint: {"center_x": .5}
            on_release: root.show_example_snackbar("top")

        MDSeparator:

        MDLabel:
            text: "Click the MDFloatingActionButton to show the following example..."
            halign: "center"

        Widget:

    MDFloatingActionButton:
        id: button
        md_bg_color: app.theme_cls.primary_color
        x: Window.width - self.width - dp(10)
        y: "10dp"
        on_release: root.show_example_snackbar("float")