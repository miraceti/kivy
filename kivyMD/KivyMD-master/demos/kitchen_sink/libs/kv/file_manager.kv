<KitchenSinkFileManager>
    name: "file manager"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDRaisedButton:
        size_hint: None, None
        size: 3 * dp(48), dp(48)
        text: "Open files manager"
        opposite_colors: True
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release: root.file_manager_open()


<KitchenSinkFileFileManagerTypeDialog>:
    orientation: "vertical"
    adaptive_height: True
    spacing: "24dp"

    MDLabel:
        text: "Open manager with 'list' or 'preview' mode?"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        spacing: "12dp"

        MDCheckbox:
            on_active: root.set_selection_type(*args)
            size_hint: None, None
            size: "48dp", "48dp"

        MDLabel:
            text: "Allow Multiple Selection ?"
