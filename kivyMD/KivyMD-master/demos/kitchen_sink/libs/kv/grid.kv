#:import environ os.environ


<KitchenSinkTileStar@SmartTileWithStar>
    size_hint_y: None
    height: "240dp"


<KitchenSinkTileLabel@SmartTileWithLabel>
    size_hint_y: None
    height: "240dp"


<KitchenSinkGrid>
    name: "grid"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        ScrollView:
            do_scroll_x: False

            MDGridLayout:
                cols: 2
                adaptive_height: True
                padding: "4dp", "4dp"
                spacing: "4dp"

                KitchenSinkTileStar:
                    mipmap: True
                    source: f"{environ['KITCHEN_SINK_ASSETS']}guitar-1139397_1280.png"
                    stars: 3

                KitchenSinkTileStar:
                    mipmap: True
                    stars: 3
                    source: f"{environ['KITCHEN_SINK_ASSETS']}african-lion-951778_1280.png"

                KitchenSinkTileLabel:
                    mipmap: True
                    text: "Beautiful\n[size=12]beautiful-931152_1280.png[/size]"
                    font_style: "Subtitle1"
                    source: f"{environ['KITCHEN_SINK_ASSETS']}beautiful-931152_1280.png"

                KitchenSinkTileLabel:
                    mipmap: True
                    text: "Robin\n[size=12]robin-944887_1280.png[/size]"
                    source: f"{environ['KITCHEN_SINK_ASSETS']}robin-944887_1280.png"
                    font_style: "Subtitle1"

                KitchenSinkTileLabel:
                    mipmap: True
                    text: "Kitten\n[size=12]kitten-1049129_1280.png[/size]"
                    source: f"{environ['KITCHEN_SINK_ASSETS']}kitten-1049129_1280.png"
                    font_style: "Subtitle1"

                KitchenSinkTileLabel:
                    mipmap: True
                    text: "Light-Bulb\n[size=12]light-bulb-1042480_1280.png[/size]"
                    source: f"{environ['KITCHEN_SINK_ASSETS']}light-bulb-1042480_1280.png"
                    font_style: "Subtitle1"
