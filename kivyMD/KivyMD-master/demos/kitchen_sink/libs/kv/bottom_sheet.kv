#:import Window kivy.core.window.Window


<KitchenSinkBoxContentForBottomSheetCustomList>
    padding: "10dp"
    spacing: "10dp"
    size_hint_y: None
    height: Window.height * 45 / 100
    md_bg_color: app.theme_cls.bg_dark

    ScrollView:

        MDGridLayout:
            id: box
            adaptive_height: True
            cols: 1


<KitchenSinkBottomSheetItemButton@AnchorLayout>
    size_hint_y: None
    height: "32dp"
    anchor_x: "center"
    text: ""
    callback: None

    MDRaisedButton:
        text: root.text
        on_release: root.callback()


<KitchenSinkBottomSheet>
    name: "bottom sheet"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    KitchenSinkBottomSheetItemButton:
        text: "Open custom bottom sheet"
        callback: lambda: root.show_example_custom_bottom_sheet("custom")
        pos_hint: {"center_y": .35}

    KitchenSinkBottomSheetItemButton:
        text: "Open custom bottom sheet with list"
        callback: lambda: root.show_example_custom_bottom_sheet("list")
        pos_hint: {"center_y": .45}

    KitchenSinkBottomSheetItemButton:
        text: "Open list bottom sheet"
        callback: lambda: root.show_example_bottom_sheet()
        pos_hint: {"center_y": .55}

    KitchenSinkBottomSheetItemButton:
        text: "Open grid bottom sheet"
        callback: lambda: root.show_example_grid_bottom_sheet()
        pos_hint: {"center_y": .65}


<KitchenSinkBaseContent@MDBoxLayout>
    id: box
    orientation: "vertical"
    padding: "10dp"
    spacing: "10dp"
    adaptive_height: True
    callback: None
    md_bg_color: app.theme_cls.bg_dark

    KitchenSinkOneLineLeftIconItem:
        text: "Video call"
        icon: "camera-front-variant"
        on_press: root.callback(self.text)

    KitchenSinkTwoLineLeftIconItem:
        text: "Call Viber Out"
        secondary_text: "Advantageous rates for calls[/color]"
        icon: "phone"
        on_press: root.callback(self.text)

    KitchenSinkTwoLineLeftIconItem:
        text: "Call over mobile network"
        secondary_text: "Operator's tariffs apply"
        icon: "remote"
        on_press: root.callback(self.text)
